      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var jsonData = pm.response.json();",
              "pm.environment.set(\"id\", jsonData.bookingid);",
              "",
              "var code = responseCode.code;",
              "var idValue = pm.environment.get(\"id\");",
              "",
              "switch (code) {",
              "    case 200:",
              "        pm.test(\"Status code matched 200\", function () {});",
              "",
              "        pm.test(\"Last Name Check\", function () {",
              "            const actual = jsonData.booking.lastname?.trim().toLowerCase();",
              "            const expected = pm.environment.get(\"lastName\")?.trim().toLowerCase();",
              "            console.log(\"Last Name:\", actual, \"| Expected:\", expected);",
              "            pm.expect(actual).to.eql(expected);",
              "        });",
              "",
              "        pm.test(\"First Name Check\", function () {",
              "            const actual = jsonData.booking.firstname?.trim().toLowerCase();",
              "            const expected = pm.environment.get(\"firstName\")?.trim().toLowerCase();",
              "            console.log(\"First Name:\", actual, \"| Expected:\", expected);",
              "            pm.expect(actual).to.eql(expected);",
              "        });",
              "",
              "        pm.test(\"Date Check\", function () {",
              "            const actual = jsonData.booking.bookingdates.checkin;",
              "            const expected = pm.environment.get(\"checkin\");",
              "            console.log(\"Checkin Date:\", actual, \"| Expected:\", expected);",
              "            pm.expect(actual).to.eql(expected);",
              "        });",
              "",
              "        pm.test(\"AdditionalNeeds Check\", function () {",
              "            const actual = jsonData.booking.additionalneeds?.trim().toLowerCase();",
              "            const expected = pm.environment.get(\"additionalneeds\")?.trim().toLowerCase();",
              "            console.log(\"Additional Needs:\", actual, \"| Expected:\", expected);",
              "            pm.expect(actual).to.eql(expected);",
              "        });",
              "",
              "        break;",
              "",
              "    default:",
              "        pm.test(\"Status code not valid or unknown\", function () {});",
              "}"
            ],
            "type": "text/javascript",
            "packages": {}
          }
