              "const moment = require('moment');",
              "",
              "// Generate dynamic check-in and check-out dates",
              "const today = moment();",
              "pm.environment.set('checkin', today.add(2, 'day').format(\"YYYY-MM-DD\"));",
              "pm.environment.set('checkout', today.add(2, 'day').add(2, 'day').format(\"YYYY-MM-DD\")); // check-out is 2 days after check-in",
